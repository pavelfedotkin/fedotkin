def is_pythagorean_triplet(x, y, z):
    # Находим максимальное число
    a, b, c = sorted([x, y, z])
    # Проверяем условие Пифагора
    return a**2 + b**2 == c**2

# Пример использования
x = 3
y = 4
z = 5
if is_pythagorean_triplet(x, y, z):
    print(f"{x}, {y}, {z} являются числами Пифагора.")
else:
    print(f"{x}, {y}, {z} не являются числами Пифагора.")
3, 4, 5 являются числами Пифагора.
